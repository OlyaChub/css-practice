<header class="header">
	<a href="#test">
		{{> logo}}
	</a>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_text">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<h2 class="form_title">{{title}}</h2>

		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

<div class="updates">
	{{#with updates}}

	<h2 class="updates_title">{{title}}</h2>

	{{#each list}}
	<div class="upd_list">
		<h3 class="nickname">{{nickname}}</h3>
		<div class="color_block">
			<p class="color_block_text">32x32</p>
		</div>
		<p class="description">{{description}}</p>
	</div>
	{{/each}}

	{{#with show_all}}
	<a href="{{url}}" class="updates_link">{{text}}</a>
	{{/with}}

	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}
	<div class="exp_badge">{{badge}}</div>
	<h2 class="exp_title">{{title}}</h2>
	{{!-- <div class="exp_badge">{{badge}}</div> --}}
	<div class="expir">
		{{#each list}}
		<div class="exp_list">
			<h4 class="exp_name">{{name}}</h4>
			<p class="exp_details">{{details}}</p>
		</div>
		{{/each}}
	</div>
	{{/with}}
</div>



<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}

</footer>