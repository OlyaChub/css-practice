<header class="header">
	<div class="">
		{{> logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<div class="main">
	<img src="{{image}}" alt="main image" class="main_image">
	<div class="main_content">
		<h1 class="main_title">{{heading}}</h1>
		<p class="main_text">{{descriotion}}</p>
		<a class="button main_button" href="{{href}}">{{button}}</a>
	</div>

</div>
{{/with}}

<main class="featured">
	{{#each featured}}
	<div class="card">
		<div class="card_image" style="background-image: url({{photo}})"></div>
		<h2 class="card_title">{{heading}}</h2>
		<p class="card_text">{{info}}</p>
		<a class="card_button" href="{{linkUrl}}">{{linkText}}</a>
	</div>
	{{/each}}
</main>

<div class="actions">
	{{#each actions}}
	<div class="actions_content">
		<h3 class="actions_title">{{heading}}</h3>
		<div class="actions_button">
			<a class="info_button" href="{{url}}">{{text}}</a>
		</div>
	</div>
	{{/each}}
</div>

<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}

</footer>